<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/top_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/btn_readback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_round"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:background="@drawable/ic_angle_left" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_round"
            android:padding="15dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:background="@drawable/ic_info" />

        </LinearLayout>

    </LinearLayout>
    <!-- Nội dung truyện -->
    <ScrollView
        android:id="@+id/novel_root_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="12dp">

            <TextView
                android:id="@+id/novel_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chương 1: Ba thúc, ta đã đọc Tam Quốc rồi.(1)"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/novel_content_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:text="Headline: Brush Brighter with Sunshine Power! Introducing the SolarBrush!
Description:
Ditch the batteries and embrace sustainable brushing with the SolarBrush, the world's first electric toothbrush powered by the sun!  This innovative brush uses built-in solar panels to recharge, so you can enjoy a powerful clean without ever needing to buy batteries again.
Here's what makes SolarBrush shine:
Eco-Friendly Power: Harness the power of the sun for a clean conscience and a sparkling smile.
Electric Cleaning: Experience the superior plaque removal of an electric brush with invigorating vibrations.
Built-in Timer: The SolarBrush features a 2-minute timerHarness the power of the sun for a clean conscience and a sparkling smile.
Electric Cleaning: Experience the superior plaque removal of an electric brush with invigorating vibrations.
Built-in Timer: The SolarBrush features a 2-minute timerHarness the power of the sun for a clean conscience and a sparkling smile.
Electric Cleaning: Experience the superior plaque removal of an electric brush with invigorating vibrations.
Built-in Timer: The SolarBrush features a 2-minute timer to ensure a dentist-recommended cleaning cycle.
SolarBrush:  Because a brighter smile starts with a brighter future!"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_angle_left" />

        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_control"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"

        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/ic_boder_account_infomation"
        android:foregroundGravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:text="Hồng Kông: Xuyên Vào Trái Tim Của Rồng Phuong Nguyen xuan thong da edit"
                    android:textColor="@color/white"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_angle_left" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ic_comment" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ic_list" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ic_settings_24" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ic_next" />


            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
